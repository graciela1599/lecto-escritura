<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nivel5_Ejercicio1">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:background="@color/mar"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/textDescripcionNivel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="89dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="6dp"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="Selecciona el nombre correcto de la imagen"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageViewNave"
                    android:layout_width="match_parent"
                    android:layout_height="207dp"
                    android:layout_marginBottom="40dp"
                    app:srcCompat="@drawable/nave" />

                <Button
                    android:id="@+id/btnNave"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:cursorVisible="false"
                    android:fontFamily="casual"
                    android:onClick="onClick"
                    android:text="nave"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:background="@drawable/letra"
                    app:backgroundTint="#00FFFFFF"
                    app:backgroundTintMode="src_over" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btnRosa"
                        android:layout_width="170dp"
                        android:layout_height="60dp"
                        android:layout_margin="15dp"
                        android:onClick="onClick"
                        android:text="rosa"
                        android:textAllCaps="false"
                        android:fontFamily="casual"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/letra"
                        app:backgroundTint="#00FFFFFF"
                        app:backgroundTintMode="src_over" />

                    <Button
                        android:id="@+id/btnRopa"
                        android:layout_width="170dp"
                        android:layout_height="60dp"
                        android:layout_margin="15dp"
                        android:onClick="onClick"
                        android:text="ropa"
                        android:textAllCaps="false"
                        android:fontFamily="casual"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/letra"
                        app:backgroundTint="#00FFFFFF"
                        app:backgroundTintMode="src_over"/>

                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>



    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>