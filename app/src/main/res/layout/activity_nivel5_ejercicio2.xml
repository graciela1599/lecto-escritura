<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nivel5_Ejercicio2"
    android:background="@color/mar">

    <TextView
        android:id="@+id/textDescripcionNivel3"
        android:layout_width="283dp"
        android:layout_height="78dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Selecciona el nombre correcto de la imagen"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/btnPlay5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_play"
        android:onClick="btnPlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textDescripcionNivel3"
        app:layout_constraintHorizontal_bias="0.595"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageViewSol"
                    android:layout_width="match_parent"
                    android:layout_height="207dp"
                    android:layout_marginBottom="40dp"
                    app:srcCompat="@drawable/img_sol" />

                <Button
                    android:id="@+id/btnMano"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:cursorVisible="false"
                    android:text="mano"
                    android:onClick="onClick"
                    android:textAllCaps="false"
                    android:fontFamily="casual"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:background="@drawable/letra"
                    app:backgroundTint="#00FFFFFF"
                    app:backgroundTintMode="src_over" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btnMama"
                        android:layout_width="170dp"
                        android:layout_height="60dp"
                        android:layout_margin="15dp"
                        android:text="mamÃ¡"
                        android:onClick="onClick"
                        android:textAllCaps="false"
                        android:fontFamily="casual"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/letra"
                        app:backgroundTint="#00FFFFFF"
                        app:backgroundTintMode="src_over" />

                    <Button
                        android:id="@+id/btnSol"
                        android:layout_width="170dp"
                        android:layout_height="60dp"
                        android:layout_margin="15dp"
                        android:onClick="onClick"
                        android:text="sol"
                        android:textAllCaps="false"
                        android:fontFamily="casual"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/letra"
                        app:backgroundTint="#00FFFFFF"
                        app:backgroundTintMode="src_over" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>